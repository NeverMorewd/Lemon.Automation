<Page
    x:Class="Lemon.Automation.App.UITracker.Views.TrackView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Lemon.Automation.App.UITracker.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="TrackView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <ui:ToggleSwitch
            Command="{Binding SwitchTrackCommand}"
            CommandParameter="{Binding Path=IsChecked, RelativeSource={RelativeSource Mode=Self}}"
            IsChecked="{Binding IsTracking.Value}"
            OffContent="Track"
            OnContent="Tracking" />
    </Grid>
</Page>
